- if @topics.count == 0
  %h2.title
    - if params[:id] == current_user.id
      = t("followable.topics.none")
    - else
      = "#{@user.name} não segue nenhum tópico ainda."
      = "#{link_to "Sugira tópicos", @path, :class => :'suggestion-link'}."
- else
  .block.followed-topics
    %h2.title
      %span
        = t("followable.topics.link", :count => @topics.count, :link => @path)
      - unless params[:id] == current_user.id
        %span
          = link_to t("user_suggestions.user"), @path, :class => :'suggestion-link'
    %ul.topic-list
      - @topics.each do |topic|
        %li
          .topic
            %span.topic-title
              = link_to_topic(topic, :render_follow_button => false)
          = render :partial => "follow", :locals => {:topic => topic}
          .clear
