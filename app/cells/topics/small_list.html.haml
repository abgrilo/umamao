- if @topics.count == 0
  %h2.title
    = t("followable.topics.none")
- else
  .block
    %h2.title
      = t("followable.topics.link", :count => @topics.count, :link => @path)
    %ul.topic-list
      - @topics.each do |topic|
        %li
          .topic
            %span.topic-title
              = link_to topic.title, topic_path(topic), :title => topic.title
          = render :partial => "follow", :locals => {:topic => topic}
          .clear
