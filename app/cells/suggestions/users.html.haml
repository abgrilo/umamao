-# User suggestions
#user-suggestions.block.suggestions
  %h3
    = t("followable.suggestions.users")

  %ul
    - User.query(:id.in => @user_suggestions.map(&:entry_id)).each do |user|
      %li
        .user.info
          = avatar_for(user, :size => 32)
          = user.name
        .controls
          .follow-info
            = link_to "#{t("followable.follow")}", follow_user_path(user), :class => "follow_link", :method => :post
          .refuse-suggestion
            = link_to "âœ•", refuse_suggestion_path(:user => user.id), :method => :post
        .clear

