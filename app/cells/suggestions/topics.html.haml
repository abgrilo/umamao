-# Topic suggestions
#topic-suggestions.block.suggestions
  - if !@topic_suggestions.blank?
    %h3.title
      = t("followable.suggestions.topics")
    %ul.topic-list
      - Topic.query(:id.in => @topic_suggestions.map(&:entry_id)).each do |topic|
        %li
          .topic.info
            %span.topic-title
              = link_to topic.title, topic_path(topic), :title => topic.title
          .controls
            .follow-info
              = link_to "#{t("followable.follow")}", follow_topic_path(topic), :class => "follow_link", :method => :post
            .refuse-suggestion
              = link_to "âœ•", refuse_suggestion_path(:topic => topic.id), :method => :post
          .clear
