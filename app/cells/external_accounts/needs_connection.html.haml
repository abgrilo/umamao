.modal
  %h1= t("questions.show.needs_connection.title")
  - if @needs_permission
    %p= t("questions.show.needs_permission")
  - else
    %p= t("questions.show.needs_connection.message", :site => @provider.capitalize)
  .controls
    = link_to t("scaffold.cancel"), "#", :class => "close"
    = link_to t("external_accounts.connect"), "/auth/#{@provider}"
  .clear
