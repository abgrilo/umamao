- if logged_in?
  .share.block
    %h3= t("#{opts[:class_name].pluralize}.show.share")
    = link_to(image_tag("facebook.gif") + " Facebook", send("new_share_#{opts[:class_name]}_path".to_sym, opts.merge(:where => "facebook")), :class => "facebook")
    = link_to(image_tag("twitter.gif") + " Twitter", send("new_share_#{opts[:class_name]}_path".to_sym, opts.merge(:where => "twitter")), :class => "twitter")
