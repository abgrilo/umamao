.secondary-navigation
  .navtitle= t(".title")

#avatar-config
  .avatar= avatar_for @user, :size => 150

  - form_for @user, :url => settings_avatar_path, :html => {:multipart => true} do |f|
    .option.upload
      %h3= t(".upload")
      = file_field_tag "avatar"
    .external
      %h3= t(".external")
      - if @user.facebook_account.present?
        .option
          = f.radio_button "avatar_config", "facebook", :disabled => @user.facebook_account.blank?
          = image_tag "facebook.gif", :alt => "Facebook"
          Facebook
      - if @user.twitter_account.present?
        .option
          = f.radio_button "avatar_config", "twitter", :disabled => @user.twitter_account.blank?
          = image_tag "twitter.gif", :alt => "Twitter"
          Twitter
      .option
        = f.radio_button "avatar_config", "gravatar"
        Gravatar
    = submit_tag t(".submit")
    = link_to t("scaffold.cancel"), settings_profile_path
