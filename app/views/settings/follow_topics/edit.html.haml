-# Bulk-following of topics in user settings.

%h2.title
  = t(".title")
= error_messages_for :user

%input.text_field#follow-topics-autocomplete{:type => "text-field", :value => t("searches.form.follow_topics"), "data-autocomplete-url" => autocomplete_url}
%ul.autocomplete-list#follow-topics-suggestions

%hr
%ul.items#followed-topics
  - @topics.each do |topic|
    = render :partial => "topics/topic", :locals => {:topic => topic}

= will_paginate @topics
