%h2.title
  = t(".title")
= error_messages_for :user

- form_for @user, :url => settings_account_path, :html => {:class => "form"} do |f|
  .group
    = f.label :timezone, t(:timezone, :scope => "activerecord.attributes.user"), :class => "label"
    = time_zone_select( "user", "timezone", ActiveSupport::TimeZone.all, {:include_blank => true}, :class => 'label', :autofocus => (!request.put? || @user.errors.present?))

  .group
    = f.label :email, t(:email, :scope => "activerecord.attributes.user"), :class => "label"
    = f.email_field :email, :class => "text_field"

  .group.navform
    = submit_tag t('users.edit.submit')
