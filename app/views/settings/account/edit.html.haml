-content_for :sidebar do
  .block
    .inner{:style => "padding-top: 10px"}
      %ul.navigation
        %li{:style => "text-align: center"}
          = gravatar @user.email.to_s, :size => 128
          =link_to t("users.form.avatar_tip"), "http://gravatar.com", :target => "_blank"

= error_messages_for :user
- form_for @user, :url => settings_account_path, :html => {:class => "form"} do |f|
  = f.label :timezone, t(:timezone, :scope => "activerecord.attributes.user"), :class => "label"
  = time_zone_select( "user", "timezone", ActiveSupport::TimeZone.all, {:include_blank => true}, :class => 'label')

  .group.navform
    = submit_tag t('users.edit.submit')
