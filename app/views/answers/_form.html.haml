%label.label
  = t(".answer_label")
= f.text_area :body, {:class => "editor-input", :rows => "auto",
  :cols => "auto", :id => "answer-input",
  "data-autocomplete-url" => autocomplete_url}
%ul#inline-autocomplete-list.autocomplete-list

= render :partial => "content_images/content_images",
  :locals => { :entry => @answer }

= render :partial => "shared/preview_pane"

#preview-area.markdown

  - if !@answer.new?
    .group
      = f.label :version_message, t("wiki.model.attributes.message"),
        :class => "label"
      = f.text_field :version_message, :class => "text_field"
