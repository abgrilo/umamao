%label.label
  = t(".answer_label")
= f.text_area :body, {:class => "editor-input", :rows => "auto", :cols => "auto", :id => "answer-input"}

#preview-command
  #view
    = link_to "Visualizar resposta", "#", :class => "show_preview_answer"
  #hide
    %label.label
      = t("global.preview")
    = link_to "Esconder visualização", "#", :class => "hide_preview_answer"
#answer-preview-area

  #answer-preview.markdown

  %script{:type => "text/javascript", :charset => "utf-8"}
    var answerNeedsMathRefresh = function(){return $("#preview-command #view").css('display') == 'none';}
    $().ready(function() { $("#answer-input").wmdMath({preview: "answer-preview", needsMathRefresh: answerNeedsMathRefresh}); });

  - if !@answer.new?
    .group
      = f.label :version_message, t("wiki.model.attributes.message"), :class => "label"
      = f.text_field :version_message, :class => "text_field"
