%label.label
  = t(".answer_label")
= f.text_area :body, {:class => "editor-input", :rows => "auto", :cols => "auto", :id => "answer-input"}

#preview-command
  %label.label
    = t("global.preview")
  #view
    = "(#{link_to t("global.enable"), "#", :class => "show_preview_answer"})"
  #hide
    = "(#{link_to t("global.disable"), "#", :class => "hide_preview_answer"})"

#preview-area.markdown

  %script{:type => "text/javascript", :charset => "utf-8"}
    var answerNeedsMathRefresh = function(){return $("#preview-command #view").css('display') == 'none';}
    $().ready(function() { $("#answer-input").wmdMath({preview: "preview-area", needsMathRefresh: answerNeedsMathRefresh}); });

  - if !@answer.new?
    .group
      = f.label :version_message, t("wiki.model.attributes.message"), :class => "label"
      = f.text_field :version_message, :class => "text_field"
