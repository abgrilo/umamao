%p= t('.greeting')

- if @topics.present?
  %p= t('.sender_topic', :user => h(@sender.name), :topic => @topics[0].title)
- else
  %p= t('.sender', :user => h(@sender.name))

\---
%p= markdown(@message, :group => @group)
\---

= simple_format(t('.site_description'))

- url = new_user_url(:invitation_token => @invitation_token)
%p
  = t('.html_link_label', :link => link_to(t('.click_here'), url))
  %br
  = url

= simple_format(t('.goodbye'))
