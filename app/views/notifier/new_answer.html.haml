- new_answer = find_and_preserve("<pre>"+ shapado_auto_link(markdown(@answer.body, :group => @group))+"</pre>")
- question = link_to h(@question.title), url_for(:host => @domain, :controller => "questions", :action => "show", :id => @question.slug)

%p
  = t('notifier.global.hi', :user => h(@user.name))
  %br
    = t('.message', :user => h(@answer.user.name), :new_answer => new_answer, :question => question)
